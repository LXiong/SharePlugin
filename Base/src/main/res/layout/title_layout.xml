<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_layout_height"
    android:background="@color/titleBgColor">

    <LinearLayout
        android:id="@+id/left_title_layout"
        android:layout_width="@dimen/title_layout_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/title_padding">

        <ImageView
            android:id="@+id/left_title_image"
            android:layout_width="@dimen/title_image_size"
            android:layout_height="@dimen/title_image_size"
            android:scaleType="fitEnd"
            android:src="@drawable/back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/left_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/back"
            android:textColor="@color/txtColor"
            android:textSize="@dimen/title_txt_size"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/right_title_layout"
        android:layout_toRightOf="@+id/left_title_layout"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/title_center_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_title_layout"
        android:layout_width="@dimen/title_layout_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/title_padding">


        <TextView
            android:id="@+id/right_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/commit"
            android:textColor="@color/txtColor"
            android:textSize="@dimen/title_txt_size"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/right_title_image"
            android:layout_width="@dimen/title_image_size"
            android:layout_height="@dimen/title_image_size"
            android:scaleType="fitStart"
            android:src="@drawable/back"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>
