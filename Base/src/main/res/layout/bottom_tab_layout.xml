<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/tabImg"
        android:layout_width="@dimen/bottom_tab_image_size"
        android:layout_height="@dimen/bottom_tab_image_size"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/tabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:maxLength="8"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/bottomTabTxtColor"
        android:textSize="@dimen/bottom_tab_text_size" />
</RelativeLayout>